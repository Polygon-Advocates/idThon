  "scripts": {
    "initialize": "pnpm recursive run initialize",
    "dev": "concurrently -n verifier,api,generator,client -c cyan,green,yellow,magenta 'cd packages/verifier && pnpm dev' 'cd packages/api && pnpm dev' 'pnpm dev:contracts' 'cd packages/client && pnpm dev'",
    "dev:api": "pnpm --filter 'api' run dev",
    "dev:client": "pnpm --filter 'client' run dev",
    "dev:contracts": "cd packages/contracts && python3 main.py",
    "test": "pnpm recursive run test",
    "build": "pnpm recursive run build"
  }
}
